<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.2//EN"
        "http://checkstyle.sourceforge.net/dtds/suppressions_1_2.dtd">

<suppressions>
    <suppress checks="ClassDataAbstractionCoupling" files="[\\/].*ApplicationContext.java$"/>
    <suppress checks="ClassFanOutComplexity" files="[\\/].*ApplicationContext.java$"/>
    <suppress checks="CyclomaticComplexity" files="[\\/].*ApplicationContext.java$"/>
    <suppress checks="HideUtilityClassConstructor" files="[\\/].*ProductCatalogApp.java$"/>

    <!-- Tone down the checking for test code -->
    <suppress checks="EmptyBlock" files=".*[\\/]src[\\/]test[\\/]java[\\/]"/>
    <suppress checks="ImportControl" files=".*[\\/]src[\\/]test[\\/]java[\\/]"/>
    <suppress checks="Javadoc" files=".*[\\/]src[\\/]test[\\/]java[\\/]"/>
    <suppress checks="MagicNumber" files=".*[\\/]src[\\/]test|it[\\/]java[\\/]"/>
    <suppress checks="LeftCurly" files=".*[\\/]src[\\/]test[\\/]java[\\/]"/>
    <suppress checks="MethodName" files=".*[\\/]src[\\/]test|it[\\/]java[\\/]"/>
    <suppress checks="AvoidStaticImport" files=".*[\\/]src[\\/]test|it[\\/]java[\\/]"/>
    <suppress checks="VisibilityModifier" files=".*[\\/]src[\\/]test[\\/]java[\\/]"/>
</suppressions>
